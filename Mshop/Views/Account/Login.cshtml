@using Mshop.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/bundles/menlayoutcss")

<style>
    .loginform {
        background: #fff;
        box-shadow: 0px 1px 10px 0px rgb(0 0 0 / 49%);
        padding: 35px;
        margin-top: 5%;
        border-radius: 5px;
        height:430px;
    }

    .form-control {
        width: 100%;
    }

    hr {
        margin: 5px 0;
    }

    section {
        padding-top: 10px;
        padding-bottom: 0;
    }


    .btn {
        border-radius: 5px;
        margin: 0;
    }

    .btn-default {
        background-color: lightgray;
    }

    .container {
        padding: 0;
    }

    .form-horizontal .control-label {
        font-weight: bold;
    }

    input.form-control, textarea, select {
        border-radius: 5px;
        border-bottom-left-radius: 5px !important;
        border-top-left-radius: 5px !important;
        border-top-right-radius: 5px !important;
        border-bottom-right-radius: 5px !important;
    }

    .form-control {
        width: 100%;
    }
</style>
<body style="background-color: #1f195e ">
    <div class="container">

        <div class="col-md-6 col-md-offset-3 loginform">

            <div class="row">
                <div class="col-md-12">
                    <center>
                        <div class="container-fluid" style="border-radius: 5px 5px; height: 110px;  padding-top: 15px; background-color: #2b3b8a;">
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="col-md-2">
                                        <div class="text-left">
                                            <img src="~/Image/hello.png" class="rounded" style="border-radius: 5px 5px; height: 85px; width: 95px; position: absolute; ">
                                        </div>

                                    </div>
                                    <div class="col-md-7 text-center">
                                        <h3 style="color:goldenrod;padding-left:5px;">Hello Mobile Shop</h3>
                                       
                                        <p style="color: whitesmoke; font-size: 12px; padding-left: 7px;">"Do You need a good phone!Just come to <strong style="color:goldenrod;">Hello Mobile Shop</strong>."</p>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="text-left">
                                            <img src="~/Image/shop.jpg" class="rounded" style="border-radius: 5px 5px;  height: 85px; width: 95px; position: absolute; ">
                                        </div>


                                    </div>
                                </div>
                            </div>

                        </div>
                        @*<img src="~/Image/title.png" height="100" width="500" class="pull-center" />*@
                    </center>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-md-12">
                    <center>

                        <div class="hidden-lg hidden-md">
                            <header style="color: #069b43; font-weight: 700; font-size: 13pt; font-family: 'Open Sans'">Hello Mobile Shop</header>
                        </div>
                    </center>
                </div>
            </div>

            <section id="loginForm" class="col-md-12">
                <hr />
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 style="text-align: center; color: #2e2573"><strong> Login Form</strong> </h4>
                    <br />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="col-md-3 control-label">Email : </label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", autocomplete = "off", @maxlength = "50", placeholder = "Email", @tabindex = "1" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label class="col-md-3 control-label">Password : </label>
                        <div class="col-md-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required", autocomplete = "off", @maxlength = "25", placeholder = "Password", @tabindex = "2" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <center>
                            <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-log-in"></span> Login</button>
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-remove-sign"></span> Cancel</button>
                        </center>
                    </div>
                }
            </section>


        </div>
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
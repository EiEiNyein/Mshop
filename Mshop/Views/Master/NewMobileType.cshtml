@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {

            var tbl = FillGrid();
            $("#cancel").click(function () {

                $("#MobileName").val('');


            });
        });
        function OnSuccess(response) {

            if (response.status == true) {
                swal(
                    {
                        title: "New Mobile Type",
                        text: response.content,
                        type: "success"
                    },function () {
                        window.location.reload();
                        window.location.href = "/Master/NewMobileType";
                    });

            }
            else {
                swal(
                    {
                        title: "New Mobile Type",
                        text: response.content,
                        type: "error"
                    });
            }
        }

        function OnFailure(response) {
            swal(
                {
                    title: "New Mobile Type",
                    text: response.content,
                    type: "error"
                });
        }

        (function ($) {
            var defaultOptions = {
                errorClass: 'has-error',
                validClass: '',
                highlight: function (element, errorClass, validClass) {
                    $(element).closest(".form-group")
                        .addClass(errorClass)
                        .removeClass(validClass);
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).closest(".form-group")
                        .removeClass(errorClass)
                        .addClass(validClass);
                }
            };

            $.validator.setDefaults(defaultOptions);

            $.validator.unobtrusive.options = {
                errorClass: defaultOptions.errorClass,
                validClass: defaultOptions.validClass,
            };
        })(jQuery);
        function FillGrid() {
            var table = $('#tblmobile').DataTable(
                {
                    "destroy": true,
                    "responsive": true,
                    "pageLength": 1,
                    "scrollX": true,
                    "lengthMenu": [1,3,5,10, 15, 20, 25, 50, 75, 100],
                    dom: "<'row'<'col-sm-6'B><'col-sm-6'f> >" +
                        "<'row'<'col-sm-12'tr>>" +
                        "<'row'<'col-sm-4'l><'col-sm-4'i><'col-sm-4'p>>",
                    buttons: [
                        'colvis',
                        {
                            extend: 'excelHtml5',
                            footer: true,
                            title: 'Mobile Type',
                            exportOptions: {
                                columns: [1, 2, 3]
                            },
                            filename: function () {
                                return "Mobile Type";
                            },
                            customize: function (xlsx) {
                                var sheet = xlsx.xl.worksheets['sheet1.xml'];
                                $('c[r=A1]', sheet).attr('s', '50');
                                $('c[r=A1]', sheet).attr('s', '2');
                                $('c[r=A2]', sheet).attr('s', '50');
                                $('c[r=A2]', sheet).attr('s', '2');
                            }
                        },

                    ],
                    "ajax": {

                        "url": "/api/MasterData/GetMobileType",
                        "type": "GET",
                        "datatype": "json",
                        "dataSrc": ''
                    },
                    "columns": [
                        { "data": "mobileid" },
                        { "data": "mobileid" },
                        { "data": "mobileName" },

                    ],
                    "columnDefs": [
                        {
                            "targets": 0,
                            "data": "mobileid",
                            "bSortable": false,
                            "render": function (data, type, row) {

                                str = '<a href="#" id="' + data + '" onclick=UpdateMobileType(this.id) class="btn btn-sm btn-warning"><span class="glyphicon glyphicon-edit"></span> </a> <a href="#" id="' + data + '" onclick="DeleteMobileType(this.id);" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash"></span></a>';
                                return str;

                            }
                        },
                    ]
                });
            return table;
        }

        function UpdateMobileType(id) {
            window.location.href = "/Master/UpdateMobileType/" + id;
        }

        function DeleteMobileType(id) {
            swal({
                title: "Are you sure?",
                text: "You will not be able to recover this imaginary file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: '#DD6B55',
                confirmButtonText: 'Yes, I am sure!',
                cancelButtonText: "No, cancel it!",
                closeOnConfirm: false,
                closeOnCancel: false,
                showLoaderOnConfirm: true
            },
                function (isConfirm) {

                    if (isConfirm) {
                        $.ajax({
                            url: '/api/MasterData/DeleteMobileType/?id=' + id,
                            type: "GET",
                            dataType: "JSON",
                            dataSrc: '',
                            success: function (response) {
                                if (response.status) {
                                    swal({
                                        title: "Delete Mobile Name",
                                        text: response.content,
                                        type: "success"
                                    }, function () {
                                        window.location.reload(true);
                                    });
                                }
                                else {
                                    swal({
                                        title: "Delete Mobile Name",
                                        text: response.content,
                                        type: "error",
                                        showConfirmButton: true
                                    }, function () {
                                        window.location.reload(true);
                                    });

                                }
                                FillGrid();
                            }
                        });
                    } else {
                        swal.close();
                    }
                });
        }
    </script>

}



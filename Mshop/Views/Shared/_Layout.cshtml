<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/ThemeJS")
    @Styles.Render("~/Content/themecss")
    @Scripts.Render("~/bundles/modernizr")

    @*@Scripts.Render("~/bundles/jqueryval")*@

    @RenderSection("scripts", required: false)

</head>

<body class="skin-black">

    <!-- header logo: style can be found in header.less -->
    <header class="header">
        <a href="#" class="logo" style="background-color: #292a45;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
            <!-- Add the class icon to your logo image or logo icon to add the margining -->
            <span class="glyphicon glyphicon-globe"></span> Dashboard





        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>

                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <!-- Messages: style can be found in dropdown.less-->
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-cog"></span>
                            <span>Settings <i class="caret"></i></span>
                        </a>
                        <ul class="dropdown-menu dropdown-custom dropdown-menu-right">
                            <li class="dropdown-header text-center">Account</li>



                            <li>
                                <a href="#">
                                    <span class="glyphicon glyphicon-user"></span>
                                    About
                                </a>

                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a href="/Account/Register">
                                        <span class="glyphicon glyphicon-ok"></span>
                                        Register
                                    </a>

                                </li>
                            }

                            <li class="divider"></li>

                            <li>
                                <a href="#"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <!-- search form -->
                @if (User.IsInRole("Admin"))
                {
                <ul class="sidebar-menu" style="font-size:14px;padding:0px,0px,1px,1px;">
                    <li class="active">
                        <a href="~/Master/Home">
                            <span class="glyphicon glyphicon-home"></span> <span>Home</span>
                        </a>
                    </li>
                    <li>

                        <a href="/Master/NewMobileModel">
                            <span class="glyphicon glyphicon-phone"></span> <span>Phone</span>
                        </a>
                    </li>
                    <li>

                        <a href="/Master/NewOrder">
                            <span class="glyphicon glyphicon-shopping-cart"></span> <span>Phone Order</span>
                        </a>
                    </li>
                    <li>

                        <a href="/Master/NewSaleExtra">
                            <span class="glyphicon glyphicon-certificate"></span>  <span>Accessories</span>
                        </a>
                    </li>
                    <li>

                        <a href="/Repair/SaveRepair">
                            <span class="glyphicon  glyphicon-wrench"></span>  <span>Repair</span>
                        </a>
                    </li>

                    <li>
                        <a href="~/Master/Customer">
                            <span class="glyphicon glyphicon-user"></span> <span>Customer</span>
                        </a>
                    </li>

                    <li @*class="active"*@>
                        <a href="~/Master/SaleInfo">
                            <span class="glyphicon glyphicon-list-alt"></span> <span>Sale</span>
                        </a>
                    </li>
                    <li>
                        <a href="~/Master/NewEmployee">
                            <span class="glyphicon glyphicon-user"></span> <span>Employee</span>
                        </a>
                    </li>

                </ul>
                }

                @if (User.IsInRole("Phone_Sale"))
                {
            <ul class="sidebar-menu" style="font-size:14px;padding:0px,0px,1px,1px;">
                <li class="active">
                    <a href="~/Master/Home">
                        <span class="glyphicon glyphicon-home"></span> <span>Home</span>
                    </a>
                </li>
                <li>

                    <a href="/Master/NewMobileModel">
                        <span class="glyphicon glyphicon-phone"></span> <span>Phone</span>
                    </a>
                </li>
                <li>

                    <a href="/Master/NewOrder">
                        <span class="glyphicon glyphicon-shopping-cart"></span> <span>Phone Order</span>
                    </a>
                </li>
                <li>

                    <a href="/Master/NewSaleExtra">
                        <span class="glyphicon glyphicon-certificate"></span>  <span>Accessories</span>
                    </a>
                </li>
                @*<li>

            <a href="/Repair/SaveRepair">
                <span class="glyphicon  glyphicon-wrench"></span>  <span>Repair</span>
            </a>
        </li>*@

                <li>
                    <a href="~/Master/Customer">
                        <span class="glyphicon glyphicon-user"></span> <span>Customer</span>
                    </a>
                </li>

                <li @*class="active"*@>
                    <a href="~/Master/SaleInfo">
                        <span class="glyphicon glyphicon-list-alt"></span> <span>Sale</span>
                    </a>
                </li>
                <li>
                    <a href="~/Master/NewEmployee">
                        <span class="glyphicon glyphicon-user"></span> <span>Employee</span>
                    </a>
                </li>

            </ul>
                }

                @if (User.IsInRole("Phone_Service"))
                {
                    <ul class="sidebar-menu" style="font-size:14px;padding:0px,0px,1px,1px;">

                        <li>

                            <a href="/Repair/SaveRepair">
                                <span class="glyphicon  glyphicon-wrench"></span>  <span>Repair</span>
                            </a>
                        </li>
                        <li>

                            <a href="/Master/SaleExtra">
                                <span class="glyphicon glyphicon-certificate"></span>  <span>Accessories List</span>
                            </a>
                        </li>
                    </ul>
                }


            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">

            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section><!-- /.content -->
            <div class="footer-main" style="background-color:black;color:white;">
                All right reserved, 2022
            </div>
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->
    <!-- jQuery 2.0.2 -->
    <!--<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="js/jquery.min.js" type="text/javascript"></script>-->
    <!-- Bootstrap -->
    <!--<script src="js/bootstrap.min.js" type="text/javascript"></script>-->
    <!-- Director App -->
    <!--<script src="js/Director/app.js" type="text/javascript"></script>-->





</body>

</html>
